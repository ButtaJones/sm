<% if c.favorite(current_user.id) == true %>

  <%= link_to "Remove from favorites", user_content_path(UserContent.where(:user_id=>current_user.id).where(:content_id=>c.id).first.id, :scoped=>true, artist_id: c.artist_id), 
  method: 'delete', class: 'button radius round tiny info', remote: true %> 

   <% else %>


   <%= link_to "Add to favorites", user_contents_path(user_content: 
   {user_id: current_user.id, content_id: c.id, artist_id: c.artist_id},:scoped=>true), 
   method: 'post', action: :create, class: 'button radius round tiny success', remote: true %>

 <% end %>
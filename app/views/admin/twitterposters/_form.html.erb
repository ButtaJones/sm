    <%= f.label :screen_name %><br>
    <%= f.text_field :screen_name %>
  </div>
  <div class="field">
    <%= f.label :artist_id %><br>
    <%= f.select :artist_id, Artist.all.collect{ |u| [u.artist_name, u.id] }, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :remote_profile_image_url %><br>
    <%= f.text_field :remote_profile_image_url %>    
  </div>



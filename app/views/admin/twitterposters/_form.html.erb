<%= form_for [:admin, @twitterposter] do |f| %>
  <% if @twitterposter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@twitterposter.errors.count, "error") %> prohibited this twitterposter from being saved:</h2>

      <ul>
      <% @twitterposter.errors.full_messages.each do |message| %>
